---
import "../styles/globals.css";
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width" />

        <meta
            name="description"
            content="a webring for conan gray fans to find like-minded individuals"
        />
        <meta property="og:title" content="conehead webring" />
        <meta property="og:site_name" content="conehead webring" />
        <meta property="og:url" content="coneheads.netlify.app" />
        <meta
            property="og:description"
            content="a webring for conan gray fans to find like-minded individuals. join today!"
        />
        <meta property="og:type" content="website" />

        <title>{title} - coneheads webring</title>
    </head>
    <body>
        <div class="wrapper">
            <header class="bg">
                <h1>
                    <a href="https://coneheads.netlify.app"
                        >✪ ⚓︎ conehead webring ⚓︎ ✪</a
                    >
                </h1>
            </header>
            <div class="content">
                <aside class="bg">
                    <ul>
                        <li><a href="/">members</a></li>
                        <li><a href="/about">about</a></li>
                        <li><a href="/rules">rules</a></li>
                        <li><a href="/join">join</a></li>
                        <li><a href="/widgets">widgets</a></li>
                    </ul>
                    <hr />
                    <h4 style="margin-bottom: 0;margin-top:5px;">
                        add our buttons!
                    </h4>
                    <p style="margin-bottom: 10px;margin-top:0;">
                        <small>(pick your favourite album)</small>
                    </p>
                    <div>
                        <img
                            src="https://file.garden/aXdBx1DU1BidR1It/conehead%20webring%2088x31.png"
                        /><img
                            src="https://file.garden/aXdBx1DU1BidR1It/conehead%20webring%20superache%2088x31.png"
                        /><img
                            src="https://file.garden/aXdBx1DU1BidR1It/conehead%20webring%20found%20heaven%2088x31.png"
                        /><img
                            src="https://file.garden/aXdBx1DU1BidR1It/conehead%20webring%20superache%20jigsaw%2088x31.png"
                        /><img
                            src="https://file.garden/aXdBx1DU1BidR1It/conehead%20webring%20kidkrow%2088x31.png"
                        />
                    </div>
                    <hr />
                    <iframe
                        width="180"
                        height="180"
                        style="border:none"
                        src="https://evehibi.nekoweb.org/ringlink/"
                        name="ringlink"></iframe>
                </aside>
                <article class="bg">
                    <slot />
                </article>
            </div>
        </div>
    </body>
</html>
